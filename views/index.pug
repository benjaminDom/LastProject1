        section.position
        script.
                if ($(".text-slider").length == 1) {
                var typed_strings =
                $(".text-slider-items").text();
                var typed = new Typed(".text-slider", {
                strings: typed_strings.split(", "),
                typeSpeed: 90,
                loop: false,
                backDelay: 900,
                backSpeed: 10,
                });
                }
        section.position
            footer#contact
